<view class="main">
<view wx:for="{{ddxq.data.ord}}" wx:key="{{index}}">
<navigator url="../ddxq/ddxq?state={{item.status}}&orderid={{item.id}}&toggleprice={{item.price}}&price_yh={{item.price_yh}}&time={{item.addtime}}&order_sn={{item.order_sn}}&uid={{item.uid}}&pnum={{item.pnum}}&snum={{item.snum}}&product_num={{item.product_num}}">
  <view class='dd_k'>
    <view class='dd_l'>
      <image src='{{info.logo}}'></image>
    </view>
    <view class='dd_c'>
      <view class='ddc_t'>{{info.newtite}}</view>
      <view class='xdsj'>下单时间：{{item.addtime}}</view>
      <view class='cpzj'>菜品总计：¥{{item.price}}</view>
    </view>
    <block wx:if="{{item.status==10}}">
      <view class='dd_r'>待付款</view>
    </block>
    <block wx:elif="{{item.status==0}}">
      <view class='dd_r'>已取消</view>
    </block>
    <block wx:else="{{item.status==50}}">
      <view class='dd_r'>已完成</view>
    </block>
    <view class='qx' data-index="{{index}}" data-id="{{item.id}}" catchtap="quxiao">取消</view>
  </view>
</navigator>
</view>

</view>