<view class="main">
   <!-- 头部  -->
  <view class='head'>
    <view class="person_name">
      <image src='{{info.logo}}'></image>
    </view>
    <view class='person_con'>
      <view class='name'>{{info.newtite}}</view>
      <!-- 评论 -->
      <view class='pl'>
        <view class='pl_l'>{{zuowei_num}}号桌</view>
        <view class='pl_c'>{{person_num}}人</view>
        <view class='pl_r'>下单时间 {{time}}</view>
      </view>
      <view class='ddbh'>订单编号:{{order_sn}}</view>
      <!-- 会员 -->
      <!-- <view class='huiyuan'>
        <view class='huiyuan_l'>新会员尊享：消费8.8折／先领券再消费</view>
        <view class='huiyuan_r'>立即加入</view>
      </view> -->
    </view>
  </view>
  <!-- 价格  -->
  <view class='zprice'>
    <view class='zprice_k'>
      <view class='zprice_k_l'>订单金额</view>
      <view class='zprice_k_r'>￥{{togglePrice}}</view>
    </view>
    <view class='zprice_k2'>
      <view class='zprice_k_l'>实付金额</view>
      <view class='zprice_k_r'>￥{{price_yh}}</view>
    </view>
  </view>

  <view class='shuliang'>共{{product_num}}份</view>


    <view wx:if="{{hasList}}">
        <view class="cart-box">
          <view class='z_list' wx:for="{{detail}}" wx:key="{{index}}">
            <view class='z_list_li'>
              <view class='z_list_l'>{{item.name}}</view>
              <view class='z_list_c'>¥{{item.price}}</view>  
              <view class='z_list_r'>{{item.num}}</view>            
            </view>
           
            
          </view>
        </view>

        <view class="cart-footer">
            <!-- <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <icon wx:else type="circle" color="#fff" class="total-select" bindtap="selectAll"/> -->
             <!--跳转结账  -->
            <!-- <view class="order-icon">
                            <navigator url="../orders/orders"><image src="/image/icon3.png"></image></navigator> 
            </view> -->
            <!-- <text>全选</text> -->
            <!-- <text class="cart-toatl-price">￥{{totalPrice}}</text> -->
             <!-- <view class='cart-toatl-l' bindtap='back'>继续点餐</view> -->
            <text class="cart-toatl-price" bindtap='toPay'  wx:if="{{state==10}}">结账</text>
            <text class="cart-toatl-price" style="background:#efefef"  wx:else>已完成</text>
        </view>
    </view>
    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>
<view class="tan {{fstate? 'active' : ''}}">
