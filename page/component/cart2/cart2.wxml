<view class="main">
   <!-- 头部  -->
  <view class='head'>
    <view class="person_name">
      <image src='{{ctzq.info.logo}}'></image>
    </view>
    <view class='person_con'>
      <view class='name'>{{ctzq.info.newtite}}</view>
      <!-- 下单信息 -->
      <view class='pl'>
        <view class='pl_l'>{{zuowei_num}}号桌</view>
        <view class='pl_c'>{{person_num}}人</view>
        <view class='pl_r'>下单时间 {{time}}</view>
      </view>
    </view>
  </view>
  <!-- 价格  -->
  <view class='zprice'>
    <view class='zprice_k'>
      <view class='zprice_k_l'>订单金额</view>
      <view class='zprice_k_r'>￥{{totalPrice}}</view>
    </view>
    <view class='zprice_k'>
      <view class='zprice_k_l'>实付金额</view>
      <view class='zprice_k_r'>￥{{sfPrice}}</view>
    </view>
    <navigator url="../yhjxz/yhjxz">
    <view class='zprice_k2'>
      <view class='zprice_k_l'>使用优惠卷</view>
      <view class='zprice_k_r' style='color:#F3C313;'>{{name}}</view>
    </view>
    </navigator>
  </view>
  <view wx:if="{{hasList}}">
    <view class="cart-box">
      <view class="cart-list" wx:for="{{carts}}" wx:key="{{index}}">
        <icon wx:if="{{item.selected}}" type="success" color="red" data-index="{{index}}"  class="cart-pro-select" bindtap="selectList"/>
          <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectList"/> 
          <navigator url="../detail/detail?current={{item.tid}}&gid={{item.gid}}">
            <block wx:if="{{item.pic}}">
              <image class="cart-thumb" src="{{item.pic}}"></image>
            </block>
            <block wx:else>
              <image class="cart-thumb" src="/image/cykb.png"></image>
            </block>
          </navigator> 
          <text class="cart-pro-name" wx:if="{{item.type[1].length>0}}">{{item.name}}({{item.type}})</text>
          <text class="cart-pro-name" wx:else>{{item.name}}</text>
          <text class="cart-pro-price">￥{{item.currentPrice}}</text>
          <view class="cart-count-box">
            <text class="cart-count-down" bindtap="minusCount" data-obj="{{obj}}" data-index="{{index}}" data-gid="{{item.gid}}" data-current="{{item.tid}}" style="color:#F3C313;">-</text>
            <text class="cart-count-num">{{item.num}}</text>
            <text class="cart-count-add" bindtap="addCount" data-index="{{index}}" data-gid="{{item.gid}}" data-current="{{item.tid}}" style="color:#F3C313;">+</text>
          </view>
          <text class="cart-del" bindtap="deleteList" data-current="{{item.tid}}" data-index="{{index}}" data-gid="{{item.gid}}" >删除</text>
        </view>
      </view>

        <view class="cart-footer">
            <!-- 全选按钮 -->
            <!-- <icon wx:if="{{selectAllStatus}}" type="success_circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <icon wx:else type="circle" color="#fff" class="total-select" bindtap="selectAll"/> -->
             <!--跳转结账  -->
            <!-- <view class="order-icon">
              <navigator url="../orders/orders"><image src="/image/icon3.png"></image></navigator> 
            </view> -->
            <!-- <text>全选</text> -->
            <!-- <text class="cart-toatl-price">￥{{totalPrice}}</text> -->
            <view class='cart-toatl-l' bindtap='back'>继续点餐</view>
            <text class="cart-toatl-price" bindtap='toPay'>结账</text>
        </view>
    </view>
    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>
<view class="tan {{state? 'active' : ''}}">
<text class='jiazai'>加载中.....</text></view>